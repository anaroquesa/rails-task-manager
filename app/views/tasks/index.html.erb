<br>
<div class="container">

  <h1 class="text-primary">DO THIS</h1>

  <br>
  <ul class="row list-group">

    <% @tasks.each do |task| %>
    <li class="list-group-item border border-primary m-1 d-flex justify-content-between">

    <div class="col-1">
      <%= check_box_tag(:completed) %>
    </div>

    <div class="col-4">
      <strong><%= link_to task.title, task_path(task.id) %></strong>
    </div>

    <div class="col-5">
      <%= task.details %>
    </div>

    <div class="col-1">
      <%= link_to "Edit", edit_path(task.id) %>
    </div>

    <div class="col-1">
      <%= link_to "Delete",
        task_path(task.id),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>
    </div>

    </li>
    <% end %>
  <button type="button" class="btn btn-danger m-1">
    <%= link_to "NEW TO DO", new_path(@task) %>
  </button>
  </ul>

</div>
